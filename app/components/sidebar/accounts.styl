// list
// ==============================================
.accountBl
  padding-bottom 10px
  color #ababab

  @media $laptop
    padding-bottom 80px

  &__title
    padding-bottom 10px
    font-weight bold

  &__content
    display flex
    flex-flow row wrap
    justify-content space-between
    margin 0 -25px
    padding-bottom 10px
    flex-space(2)

    @media $laptop
      flex-flow column nowrap


// account-item
// ==============================================
.accountItem
  display flex
  justify-content space-between
  align-items center
  flex 0 1 45%
  padding 3px 15px
  margin 0 10px
  border 1px solid transparent
  border-bottom-color alpha(white, .03)

  @media laptop
    flex-basis 100%

  &:hover
    margin-top -1px
    padding-top 4px
    border 1px solid alpha(white, .03)
    border-top-color transparent
    background alpha(white, .03)

  @media $laptop
    margin-bottom 10px
    padding-bottom 10px

  &:last-child
    margin-bottom 0


// account-total
// ==============================================
.accountTotal
  display flex
  padding-bottom 10px
  justify-content space-between

  &:last-child
    padding-bottom 0

  .accountLabel
    padding-right 20px
    font-weight bold

.accountTotalValue
  display flex

  @media $laptop
    flex-flow row wrap

  &__in
    flex 0 1 100%
    text-align right
    padding-right 10px

    @media $laptop
      padding-right 0
