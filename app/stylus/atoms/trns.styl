.trnsPage
  position relative

.trnItem
  max-width 600px
  margin-bottom 15px
  padding 10px
  padding-left 12px
  background $color-trn
  border-radius 3px
  anim()

  &:hover
    background $color-trn-hover

  &.tinkoff
    border-left 3px solid $color-tinkoff

  &.rub
    border-left 3px solid $color-rub


.trnsDay
  h3
    margin-top 50px
    margin-bottom 15px
    font-size 16px
    font-weight bold
    letter-spacing 2px
    text-transform uppercase
