.account1
  color $color-rub
.account2
  color $color-tinkoff

.accountPage
  padding-bottom 0px

.account
  flex 1 1
  padding-bottom 25px

  &:last-child
    padding-bottom 10px

.accountTitle
  display flex
  align-items center
  justify-content center
  margin-top 25px
  margin-bottom 25px
  font-size 12px
  font-weight bold
  letter-spacing 2px
  text-transform uppercase

.accountContent
  display flex
  flex-flow row wrap
  justify-content space-between
  flex-space(2)

  @media $laptop
    flex-flow column nowrap

.accountContentItem
  position relative
  display flex
  flex 1 1 45%
  height 60px
  padding 0 15px
  justify-content space-between
  align-items center
  color $color-second
  border-bottom 1px solid $color-line-account
  anim-all()

  @media $laptop
    flex-basis 100%
    max-width 100%
    margin 0 30px

  &:hover
    color $color-main

  &:last-child
    margin-bottom 0
    border none

  sup
    display none

  &.account1
    &:before
      content " "
      position absolute
      left 0
      top 50%
      width 1px
      height 15px
      margin-top -7.5px
      border-radius 0
      background #2E86C1
      anim()
    &:hover:before
      width 5px

  &.account2
    &:before
      content " "
      position absolute
      left 0
      top 50%
      width 1px
      height 15px
      margin-top -7.5px
      border-radius 0
      background #ab68da
      anim()
    &:hover:before
      width 5px

  &.account1.active
    color #2E86C1

  &.account2.active
    color #ab68da

// label
.accountContentItemLabel
  letter-spacing .5px

.accountContentItemTotal
  $font-numbers()
  letter-spacing 1px
  font-size 16px
  color $color-sum
  font-weight bold
  text-align right

  @media $laptop
    flex-flow row wrap

.accountContentItemTotalIn
  flex 0 1 100%
  text-align right
  white-space nowrap

.infoTable
  max-width 500px
  display flex
  flex-flow row nowrap
  margin-bottom 60px
  align-items center

  &__cell
    flex 1 1
    max-width 350px
    margin-right 20px

  &__pie
    margin-bottom -13px
    opacity .8
    anim()
    &:hover
      opacity 1

.accountDetails
  overflow hidden

  .accountContentItem
    margin 0

  &._small
    .accountContentItem
      height auto
      padding 15px

.accountTrns
  h3 + .trnItem
    border-top 1px solid $color-line-layout

  .trnItem
    padding 15px
    margin 0
    background none
    border none
    border-top 1px solid $color-line
    border-left 0 !important
    border-radius 0
    &:last-child
      border-bottom none
