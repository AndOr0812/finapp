.trn-item
  display flex
  justify-content space-between
  align-items center
  padding 15px
  border 1px solid transparent
  border-bottom-color rgba(0, 0, 0, .05)
  anim()

  &:first-child
    border-top-color transparent

  &:last-child
    border-bottom-color transparent

  &:hover
    background rgba(42, 63, 84, .04)
    border-color rgba(0, 0, 0, .05)
    border-top-color transparent

  .incomes
    color green
    font-weight bold

  .expenses
    color red
    font-weight bold

  &__col
    flex 1 1 20%

.icon
  position relative
  width 30px
  height 30px

  &:after
    position absolute
    left 0
    top 0
    content ' '
    width 100%
    height 100%
    background-image url(../img/icons/eggplant.svg)

.icon-13:after
  background-image url(../img/icons/credit-card.svg)

.icon-14:after
  background-image url(../img/icons/food.svg)

.icon-15:after
  background-image url(../img/icons/gas-station.svg)

.icon-28:after
  background-image url(../img/icons/sport.svg)
