.filter
  display flex
  position relative
  justify-content space-between
  align-items center

  @media $laptop
    margin-right 30px

.filterItem
  text-align center

  &._date
    min-width 100px
    text-transform uppercase
    font-size 14px
    font-weight bold
    $font-numbers()

  .fa
    cursor pointer

.filterItemDate
  display inline-flex
  padding-left 5px


.filter
  .prev
    opacity .05
    anim()

  &:hover
    .prev
      opacity 1
