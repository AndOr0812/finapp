icon($icon, $bg = #242424)
  background $bg
  .icon__pic
    fa($icon)


.icon
  display flex
  width 40px
  height 40px
  align-items center
  justify-content center
  color alpha(white, .7)
  font-size 1.2rem
  background $color-layout
  border-radius 3px

  &._link
    anim()
    &:hover
      background $color-link

  &__pic
    fa(industry)


