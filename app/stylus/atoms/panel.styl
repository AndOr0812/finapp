.panel
  margin-bottom 80px
  padding 30px
  background $color-panel
  border 1px solid $color-line
  border-radius 3px

  &__title
    display flex
    flex-flow wrap row
    justify-content space-between
    align-items center

    &-name
      margin-bottom 0

    &-nav
      display flex
      align-items center
      $font-secondary-mixin()

      &__date
        width 130px
        text-align center

      &__left
        margin-right -10px
        padding 0 15px
        cursor pointer
        fa("angle-double-left")
        anim()

        &:hover
          opacity .8

      &__right
        margin-left -10px
        padding 0 15px
        cursor pointer
        fa("angle-double-right")
        anim()

        &:hover
          opacity .8
.panel
  .panel
    box-shadow none
    border-left none
    border-right none
    border-top none
    margin 0
    padding 10px 0

    &:first-child
      // padding-top 0

    &:last-child
      border none
      // padding-bottom 0


.panelChart
  position relative
  overflow hidden

.chart
  // margin-top -9px
  // margin-right -9px
  // margin-bottom -15px
  // margin-left -15px

.trn
  border-bottom 1px solid alpha(white, .1)
  &:last-child
    border-bottom none

  & .panel
    padding 10px

  h3
    margin-bottom 0
    padding-bottom 10px
    background $color-body

.panel.small
  display none
  padding 15px
  margin-bottom 30px
  font-size 14px


.infoTable
  width 400px
  display flex
  flex-flow row nowrap
  margin-bottom 60px

  &__cell
    flex 0 0 250px
    margin-right 20px

  &__pie
    margin -1px 0 0 0
    opacity .8
    anim()
    &:hover
      opacity 1


.panelTitle
  margin-bottom 50px
  $font-secondary()

  h1&
    font-size 1.5rem

  &._sm
    margin-bottom 25px

  &._minus
    margin-bottom -15px

  .link
    display inline-flex
    cursor pointer

  span
    text-transform none
