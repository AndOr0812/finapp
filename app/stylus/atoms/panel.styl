.panel
  margin-bottom 10px
  padding 15px
  background $color-panel
  border 1px solid $color-line
  border-radius 3px

  @media $laptop
    padding 30px
    margin-bottom 80px

.panelChart
  position relative
  overflow hidden

.panelTitle
  display flex
  align-items center
  margin-bottom 20px
  $font-secondary()

  @media $laptop
    margin-bottom 50px

  h1&
    font-size 2rem
    letter-spacing 4px

  &._sm
    margin-bottom 25px

  &._mid
    margin-bottom 45px

  &._minus
    margin-bottom -35px

    @media $laptop
      margin-bottom -15px

  .link
    display inline-flex
    cursor pointer

  .icon
    padding-left 5px
    margin 0 10px

  .name
    padding-left 15px
    text-transform none

  .sup
    opacity .1
    color $color-second
    font-size 1rem
    margin-top -15px
    letter-spacing normal
    anim()
    ~/:hover ^[1..-1]
      opacity 2

.panelCol
  display flex
  flex-flow row wrap
  justify-content space-between

  @media $pc
    flex-flow row nowrap

  .panel
    flex-basis 100%

    @media $pc
      flex 0 1 calc(50% - 25px)
