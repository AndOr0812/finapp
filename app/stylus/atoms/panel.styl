.panel
  position relative
  margin-bottom 10px
  padding 15px
  background $color-panel
  border 1px solid $color-line
  border-radius 3px

  @media $laptop
    padding 30px
    margin-bottom 80px

  &._smallWidth
  &._minWidth
    max-width 550px

  &._chart
    background $color-panel-chart

  &._clean
    margin 0
    padding 0
    border none
    background none

  &__chart
    &._hidden
      visibility hidden
      opacity 0

  &__empty
    visibility hidden
    opacity 0

    &._visible
      display flex
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      align-items center
      justify-content center
      visibility visible
      opacity 1

  &__loader
    opacity 0
    visibility hidden
    display flex
    justify-content center
    align-items center
    z-index 2
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    font-size 5rem
    text-transform uppercase
    font-weight bold
    letter-spacing 2px
    background alpha($color-layout, .9)
    border-radius 3px
    anim()

    &._visible
      opacity 1
      visibility visible
