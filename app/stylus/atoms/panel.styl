.panel
  position relative
  margin-bottom 10px
  padding 15px
  background $color-panel
  border 1px solid $color-line
  border-radius 3px

  @media $laptop
    padding 30px
    margin-bottom 80px

  &._smallWidth
    max-width 550px

.panelCol
  display flex
  flex-flow row wrap
  justify-content space-between

  @media $pc
    flex-flow row nowrap

  .panel
    flex-basis 100%

    @media $pc
      flex 0 1 calc(50% - 40px)


.panel__loader
  opacity 0
  visibility hidden
  display flex
  justify-content center
  align-items center
  z-index 2
  position absolute
  width 100%
  height 100%
  left 0
  top 0
  font-size 5rem
  text-transform uppercase
  font-weight bold
  letter-spacing 2px
  background alpha($color-layout, .9)
  border-radius 3px
  anim()

  &._visible
    opacity 1
    visibility visible
