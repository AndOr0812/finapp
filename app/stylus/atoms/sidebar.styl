.sidebar
  flex-shrink 0
  position relative
  width 280px
  background $color-layout
  border-right 1px solid $color-line-layout
  anim()

  &__wrap
    @media $laptop
      position fixed
      overflow-x scroll
      left 0
      top 0
      width 280px
      height 100%

  &__in
    opacity 1
    display flex
    flex-flow row wrap
    align-content space-between
    height 100%

  &__menu
    z-index 2
    position fixed
    left 30px
    top 25px
    width 20px
    height 20px
    border-top 2px solid $color-second
    cursor pointer
    anim()

    &:before,
    &:after
      content ""
      position absolute
      width 100%
      height 2px
      background $color-second

    &:before
      top 5px

    &:after
      top 12px

  &._hidden
    width 20px
    cursor pointer

    &:hover
      background $color-line

    .sidebar__menu
      left 50px

    .sidebar__wrap
      opacity 0
      transform translateX(-100px)
