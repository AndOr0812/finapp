.topBar
  z-index 2
  position fixed
  top 0
  width calc(100% - 280px)
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-items center
  background $color-body
  border-bottom 1px solid $color-line-layout

  @media $laptop
    margin-left -50px
    margin-right -50px
    margin-top 0
    margin-bottom 50px

  &:after
    z-index 12
    content ""
    position absolute
    top 63px
    width 100%
    height 20px
    background red
    background linear-gradient(to bottom, $color-body 0%, transparent 100%)
