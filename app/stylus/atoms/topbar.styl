.topBar
  display flex
  flex-flow column wrap
  justify-content space-between
  align-items center
  margin -10px
  padding 10px
  margin-bottom 30px
  background $color-body
  border-bottom 1px solid $color-line-layout

  @media $laptop
    flex-flow row nowrap
    position fixed
    z-index 3
    top 0
    width calc(100% - 280px - 160px)
    margin 0
    padding 0
    // margin-left -80px
    // margin-right -50px

    &:after
      z-index 3
      content ""
      position absolute
      top 65px
      width 100%
      height 20px
      background linear-gradient(to bottom, $color-body 0%, transparent 100%)

  &__status
    z-index 2
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    padding 0 30px
    display flex
    align-items center
    background black

  &__anim
    &-enter-to, &-leave-to
      opacity 1
      anim-all()

    &-enter, &-leave-to
      opacity 0
      transform translateY(-100%)
