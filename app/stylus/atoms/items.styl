.items
  display flex
  align-items center
  margin-bottom 15px
  padding-right 15px
  padding-bottom 15px
  border-bottom none
  color $color-main

  &:last-child
    margin-bottom 0
    padding-bottom 0
    border-bottom none

  > .item
    flex 0 1 120px
    white-space nowrap
    padding-left 30px

    &:first-child
      flex-basis auto
      padding-left 0

    &:last-child
      padding-right 0
