.stat
  display flex
  align-items center
  justify-content space-between
  padding-top 80px
  margin-left -25px
  opacity .7
  anim()
  &:hover
    opacity 1

  &__toogleShowGraph
    margin-top 20px
    display inline-flex
    padding 15px 25px
    margin-right 15px
    color $color-main
    font-size .8rem
    text-transform uppercase
    letter-spacing 2px
    background $color-line
    border 1px solid $color-body
    border-radius 3px
    cursor pointer
    anim()

    &:hover
      border-color $color-link

  &__item
    flex 1 0 auto
    padding 20px 0px
    anim()

    &._compact
      padding 0

      .stat__values
      .stat__graph
        max-width none

    &:last-child
      margin-right 0

    &:hover
      background #111

  &__values
    max-width 70px
    margin 0 auto
    text-align right
    padding-top 10px
    .incomes
    .expenses
    .sum
      font-size 1rem

  &__graph
    max-width 70px
    margin 0 auto
    display flex
    align-items flex-end
    height 100px

    &__in
      flex 1 1 auto

      &._incomes
        margin 0 4px
        background $color-income

      &._expenses
        margin 0 4px
        background $color-expense

      &._empty
        height 1px
        margin 0 4px
        background $color-line

// #fct
// ===============================================
.fastCreatTrn
  &__content
    padding-bottom 30px

  &__day
    margin-bottom 80px
    padding-bottom 0px
    border-bottom 1px solid $color-line
    &:last-child
      margin-bottom 0

  &__addDay
    display inline-flex
    padding 15px 30px
    text-transform uppercase
    letter-spacing 1px
    font-weight bold
    background $color-line
    border 1px solid $color-line
    border-radius 3px
    anim()

    &:hover
      border-color $color-link

  &__trn
    display flex
    align-items center

    &__item
      flex 1 1
      padding 0 20px

      &:first-child
        padding-left 0

      &:last-child
        padding-right 0


.mb
  margin-bottom 60px

.sl
  max-width 460px
  margin -10px

.dark
  background $color-layout


.page-blur
  z-index 5
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background alpha($color-layout, .8)



.bg-1
.bg-1.icon
  background $color-rub

.bg-2
.bg-2.icon
  background $color-tinkoff


// Right menu with create trn
.toogleTrnCreateBtn
  cursor pointer
  display flex
  align-items center
  justify-content center
  position absolute
  right 0px
  padding 0 40px
  color $color-second

  &:hover
    color $color-link

  &__icon
    display flex
    align-items center
    justify-content center
    width 30px
    height 30px
    color $color-main
    font-size 2.5rem
    $font-numbers()
    border 2px solid transparent
    border-radius 50%
    anim()

    ^[0]:hover &
      color $color-link

    ^[0]._active &
      margin-right 20px
      color $color-link
      font-size 3.5rem
      transform rotate(45deg)
      border-color $color-link


.ml
  margin-left 10px
