.mb
  margin-bottom 60px

.sl
  max-width 460px
  margin -10px

.dark
  background $color-layout


.page-blur
  z-index 5
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background alpha($color-layout, .8)

.right-bar
  &._fixed
    padding 40px 10px
    border-top 2px solid $color-line
    border-bottom 2px solid $color-line

    @media $laptop
      display flex
      align-items center
      z-index 5
      max-width 552px
      position fixed
      right 0px
      padding 0px 80px
      padding-bottom 46px
      top 46px
      height 100%
      background $color-sidebar
      border none
      border-left 2px solid $color-line

    // border-bottom 1px solid $color-line
    // display none

.bg-1
.bg-1.icon
  background $color-rub

.bg-2
.bg-2.icon
  background $color-tinkoff


// Right menu with create trn
.toogleTrnCreateBtn
  cursor pointer
  display flex
  align-items center
  justify-content center
  position absolute
  right 20px
  color $color-second

  &:hover
    color $color-link

  &__text
    color $color-main
    font-size 14px
    font-weight bold
    text-transform uppercase
    letter-spacing 2px
    anim()

    ^[0]._active &
      opacity 0

  &__icon
    display flex
    align-items center
    justify-content center
    width 30px
    height 30px
    color $color-main
    font-size 2.5rem
    $font-numbers()
    border 2px solid transparent
    border-radius 50%
    anim()

    ^[0]._active &
      margin-right 20px
      color $color-link
      font-size 3.5rem
      transform rotate(45deg)
      border-color $color-link


.ml
  margin-left 10px
