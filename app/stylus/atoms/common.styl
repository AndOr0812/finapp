.table2
  display flex
  justify-content space-between

.table__cell
  width (calc(50% - 15px))

.link
  display block
  margin-right 10px
  border-bottom none

  &.active
    font-weight bold

.income
  font-size 18px
  font-weight bold
  color $color-income
  font-family 'Unica One'

.expense
  font-size 18px
  font-weight bold
  color $color-expense
  font-family 'Unica One'

.sum
  font-size 18px
  font-weight bold
  color $color-sum
  font-family 'Unica One'

.loading
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  text-align center
  background grey
