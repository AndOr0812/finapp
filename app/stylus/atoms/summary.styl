.summaryShort
  position relative
  &__content
    display flex
    flex-flow row wrap
    align-items center
    justify-content center
    anim()

    @media $laptop
      flex-flow row nowrap
      justify-content space-between

    &._hidden
      opacity 0
      visibility hidden

  &__empty
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
    anim()

    &._hidden
      opacity 0
      visibility hidden

  &__el
    flex-basis 100%

    @media $laptop
      flex 1 1
      margin-right 20px

    &._pie
      display flex
      align-items center
      justify-content center
      margin-bottom -13px
      margin-right 0
      opacity .8
      anim()

      &:hover
        opacity 1
