.summaryShort
  display flex
  flex-flow row wrap
  align-items center
  justify-content center

  @media $laptop
    flex-flow row nowrap
    justify-content space-between

  &__el
    flex-basis 100%

    @media $laptop
      flex 1 1
      margin-right 20px

    &._pie
      display flex
      align-items center
      justify-content center
      margin-bottom -13px
      margin-right 0
      opacity .8
      anim()
      &:hover
        opacity 1
