.modalCenter
  &__overlay
    visibility hidden
    opacity 0
    z-index 9
    position fixed
    left 0
    bottom 0
    width 100%
    height 100%
    background alpha(black, .7)
    transition all 400ms ease

    ^[0]._active &
      visibility visible
      opacity 1

  &__wrap
    z-index 10
    position fixed
    left 50%
    top 50%
    width auto
    transform translate(-50%, -50%)
    background $color-sidebar

  &__title
    padding $m $mb
    $typo-title()
    background $color-body

  &__content
    padding $m $m
