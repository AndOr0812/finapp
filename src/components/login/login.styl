.loginForm
  display flex
  flex-flow column
  width 100%
  min-height 100vh
  align-items center
  justify-content center
  padding $m

  &__wrap
    display flex
    flex-flow column wrap
    margin-bottom 100px
    align-items center

  &__header
    display flex
    align-items center

  &__logo
    margin-right $m
    width 50px
    height 50px
    fill var(--main-color)

  &__name
    margin 0
    font-size 3rem
    letter-spacing 3px
    font-weight bold

  &__button
    margin-top 60px
    padding $mm 25px
    color var(--btn-red-color)
    font-size 16px
    font-weight bold
    background var(--btn-red-background)
    border-radius 3px
    cursor pointer

    @media $after768
      margin-top 100px

  &__bottom
    position fixed
    display flex
    align-items center
    justify-content center
    left 0
    bottom 0
    width 100%
    margin-top auto
    padding $mb
    color var(--main-color)

    @media $after768
      bottom $m

  &__heart
    display inline-flex
    margin 0 $mss
    color rgba(210, 0, 20, 1)
    font-size 22px
    animation heartbeat 3s ease-in-out infinite

@keyframes heartbeat
  0% {transform:scale(.75)}
  20% {transform:scale(1)}
  40% {transform:scale(.75)}
  60% {transform:scale(1.1)}
  80% {transform:scale(.75)}
  100% {transform:scale(.75)}
