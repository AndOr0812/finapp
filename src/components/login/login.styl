.loginForm
  display flex
  flex-flow column
  width 100%
  min-height 100vh
  align-items center
  justify-content center
  padding $m $m $m $m

  &__wrap
    display flex
    flex-flow column wrap
    margin-bottom 100px

  &__header
    display flex
    align-items center

  &__logo
    margin-right $m
    width 50px
    height 50px
    fill $color-main

  &__name
    margin 0
    font-size 3rem
    letter-spacing 3px
    font-weight bold

  &__error
    padding 10px
    margin-bottom 20px
    border 1px solid $color-expense

  &__action
    display block
    margin-top $mb
    padding 15px 25px
    color $color-main
    font-size 1.2rem
    font-weight bold
    text-align center
    background #b33508
    border 1px solid $color-itemStat
    border-radius 3px
    cursor pointer
    anim()

    @media $after768
      margin-top 100px

    &:hover
      border-color $color-link

  &__bottom
    position fixed
    display flex
    align-items center
    justify-content center
    left 0
    bottom 0
    width 100%
    margin-top auto
    padding $mb

  &__heart
    display inline-flex
    margin 0 $mss
    color #dd464c
    font-size 22px
    animation heartbeat 3000ms ease-in-out infinite

@keyframes heartbeat
  0% {transform:scale(.75)}
  20% {transform:scale(1)}
  40% {transform:scale(.75)}
  60% {transform:scale(1)}
  80% {transform:scale(.75)}
  100% {transform:scale(.75)}
