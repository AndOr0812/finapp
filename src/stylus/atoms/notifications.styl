.notification-wrapper
  .notification
    left 0
    width 298px
    margin 0
    margin-bottom 6px
    padding 20px
    font-size .9rem
    color white
    letter-spacing 0
    background #44A4FC
    border-left 5px solid #187FE7
    transition all 500ms

    &.warn
      background #ffb648
      border-left-color #f48a06

    &.error
      background #E54D42
      border-left-color #B82E24

    &.success
      background #68CD86
      border-left-color #42A85F

    &-title
      padding-bottom 16px
      font-size 1.3rem
      font-weight bold
      letter-spacing 1px
      line-height 1rem
      text-transform uppercase
      $font-numbers()
