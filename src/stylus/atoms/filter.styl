.filter
  position relative
  display flex
  align-items center
  margin-bottom 20px

  @media (min-width: 768px)
    margin-bottom 30px

  &__input
    flex-grow 1
    height 40px
    margin-right 10px
    padding 0px 5px 0px 5px

    color $color-main
    font-size .8rem
    font-weight bold
    letter-spacing 2px
    border-bottom 1px solid $color-line
    anim()

    &:last-child
      margin-right 0

    &:hover, &:focus
      border-color $color-link

    &::-webkit-input-placeholder
      font-size .6rem
      text-transform uppercase

  &__btns
    display flex
    flex-flow row nowrap
    align-items center

  &__btn
    display flex
    justify-content center
    align-items center
    width 45px
    height 45px
    text-transform uppercase
    font-size 1rem
    color $color-white
    font-weight bold
    cursor pointer
    anim()

    &:hover
      background alpha($color-link, .8)
