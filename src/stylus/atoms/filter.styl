.filter
  display flex
  height 40px
  padding 0 20px
  padding-right 26px
  align-items center
  justify-content space-between
  background $color-filter-bg
  
  @media (min-width: 768px)
    padding 0 30px

  &__input
    min-width 50px
    height 30px
    padding 0
    color $color-main
    font-size .8rem
    font-weight bold
    anim()

    &:last-child
      margin-right 0

    &::-webkit-input-placeholder
      font-size .7rem
      text-transform uppercase

  &__btns
    display flex
    flex-flow row nowrap
    align-items center
    margin-right -10px
    
    @media $after768
      margin-right 0

  &__btn
    cursor pointer
    display flex
    justify-content center
    align-items center
    width 40px
    height 40px
    text-transform uppercase
    font-size 18px
    color $color-grey
    font-weight bold
    anim()

    @media $after768
      width 30px
      font-size 16px

    &:hover
      @media $after768
        color $color-main
        background $color-sidebar-bg-hover
