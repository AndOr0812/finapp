.filterBtn
  display block
  width 100%
  margin-bottom 60px
  padding 15px
  color $color-main
  font-size 1rem
  font-weight bold
  text-transform none
  letter-spacing 2px
  background $color-line
  border 1px solid $color-body
  cursor pointer
  anim()

  &:hover, &:focus
    border 1px solid $color-link


.filter
  display flex
  position relative
  justify-content space-between
  align-items center
  font-size 1rem
  margin-bottom 40px

.filterItem
  text-align center

  &._date
    min-width 140px
    text-transform uppercase
    font-size 1.6rem
    font-weight bold
    $font-numbers()

  .fa
    cursor pointer

.filterItemDate
  display inline-flex
  padding-left 15px


.filter
  .link
    margin-top -3px
    padding 15px 20px
    opacity .5
    border none
    color $color-main
    cursor pointer
    anim()

    @media $laptop
      padding 15px 50px


  &:hover
    .link
      opacity 1
      background alpha(white, .3)
      border-radius 3px
