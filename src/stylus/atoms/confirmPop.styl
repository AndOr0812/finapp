.confirmPop
  z-index 2
  overflow hidden
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  background $color-trn-hover
  border-top 1px solid $color-expense
  border-bottom 1px solid $color-expense

  &__in
    display flex
    align-items center
    justify-content flex-end
    height 100%
    padding 0 10px

    @media (min-width: 768px)
      padding 0 20px

  &__text
    font-size 14px
    padding-right 15px
    padding-left 10px

    &._delete
      color $color-expense

  &__actionItem
    cursor pointer
    display flex
    align-items center
    justify-content center
    width 40px
    min-width 40px
    height 100%
    text-align center
    font-size 1.2rem
    color $color-grey
    anim()

    @media (max-width: 768px)
      &:active
        background $color-sidebar-bg-hover
    
    @media (min-width: 768px)
      width 40px
      font-size 1rem

    &:hover
      color $color-white

    &._delete:hover
      color #c12222