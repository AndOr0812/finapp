.confirmPop
  opacity .9
  z-index 2
  overflow hidden
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  background $color-trn-hover
  border-radius 3px

  &__in
    display flex
    align-items center
    justify-content flex-end
    flex-grow 1
    height 55px
    padding 0 10px

    @media (min-width: 768px)
      height 75px
      padding 0 15px

  &__text
    flex-grow 1
    text-align right
    font-size 1rem
    padding-right 15px
    padding-left 5px

    &._delete
      color $color-expense

  &__actionItem
    width 40px
    text-align center
    font-size 1.5rem
    cursor pointer
    anim()

    @media (min-width: 768px)
      width 55px

    &:hover
      color $color-link

    &._delete:hover
      color #c12222
