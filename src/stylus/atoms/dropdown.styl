.dropdown
  display flex
  position relative

  &__name
    cursor pointer
    padding-bottom 3px
    margin-bottom -3px
    anim()

  &__content
    position absolute
    left 0px
    top 40px !important
    white-space nowrap

  &__link
    padding 5px 10px
    cursor pointer
    color white
    font-size 1.2rem
    margin-right 10px
    letter-spacing 1px
    background #5e7a88
    border-radius 3px

    &:hover
      background alpha(#ea6151, .5)

    &._active
      opacity 1
      background #ea6151


.calendar-dropdown
  display grid
  grid-template-columns auto auto
  grid-column-gap 50px
  width 550px
  white-space nowrap
