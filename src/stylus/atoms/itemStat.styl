.itemStat
  position relative
  display block
  min-width 300px
  color $color-second
  border-radius 3px
  background alpha(black, .2)
  border 1px solid alpha(black, .3)
  margin-bottom 15px
  anim()

  &._opened
    margin-bottom 15px
    background $color-trn-hover
    border-color $color-line

    &:last-child
      margin-bottom 0

  &._link
    cursor pointer
    margin-top 0

    &:hover
      border-color $color-trn-hover-line

  &:hover
    background $color-trn-hover

  &__in
    display flex
    align-items center
    padding 15px

  &__icon
    padding-right 15px
    .icon:hover
      background $color-link !important

  &__content
    display flex
    flex-flow column nowrap
    flex-grow 1

  &__name
    flex-grow 1
    padding-left 5px
    text-transform capitalize
    font-size 1.1rem

  &__text
    display flex
    padding-bottom 10px

  &__price
    min-width 115px
    max-width 125px
    padding-right 5px
    text-align right

  &__graph
    flex-grow 1
    background #242424
    border-radius 3px
    overflow hidden

  &__graph__in
    height .6rem
    border-radius 0

    &._expense
      background $color-expense

    &._income
      background $color-income

  &__trns
    cursor default
    padding 0 15px 10px
