.itemStatGroup
  padding 0 10px
  margin-bottom 80px

  &:last-child
    margin-bottom 0

.itemStat
  margin 0 -10px
  opacity .9
  position relative
  display block
  color $color-second
  border 1px solid transparent
  border-bottom 1px solid $color-line-summary
  cursor pointer

  &._active
    opacity 1
    cursor default
    background alpha($color-trn-hover, .5) !important
    border-color alpha($color-link, .8) !important

  &._opened
    margin 20px -10px
    padding-bottom 0
    background alpha($color-trn-hover, .5) !important
    border-color $color-line

    &:first-child
      margin-top 0

    &:hover
      border-color alpha($color-link, .8) !important

  &._child
    margin 0
    padding-left 15px
    margin-bottom 0 !important
    background alpha($color-trn-hover, .5) !important
    border-color transparent
    border-top-color $color-line

    &:hover
      background alpha($color-trn-hover, .5) !important
      border-color $color-line !important

  &:last-child
    margin-bottom 0

  &:hover
    opacity 1
    background $color-trn-hover
    border-color $color-trn-hover-line

  &__in
    display flex
    align-items center
    padding 10px

    @media (min-width: 768px)
      padding 10px

  &__icon
    padding-right 15px

    @media (min-width: 768px)
      padding-right 20px

  &__content
    display flex
    flex-flow column nowrap
    flex-grow 1

  &__name
    flex-grow 1
    padding-left 2px
    color $color-white-text
    font-size .95rem
    letter-spacing .5px
    white-space nowrap
    $font-secondary()

  &__text
    display flex
    flex-flow row wrap
    padding-bottom 6px

    @media (min-width: 768px)
      padding-bottom 10px

    &:last-child
      padding-bottom 0

  &__price
    min-width 70px
    max-width 125px
    padding-right 2px
    text-align right
    @media (min-width: 768px)
      min-width 105px

  &__graph
    flex-grow 1
    overflow hidden
    margin-bottom 10px
    border-radius 2px
    background $color-graph

    &:last-child
      margin-bottom 0

  &__graph__in
    min-height 8px
    border-radius 0

    &__price
      padding 4px 8px
      white-space nowrap
      color $color-white
      $font-numbers()
      font-weight bold
      font-size 1rem

    &._expense
      background $color-expense

    &._income
      background $color-income

  &__trns
    cursor default
