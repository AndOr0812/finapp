.itemStat
  position relative
  display block
  min-width 300px
  margin-bottom 30px
  color $color-second
  border-radius 3px
  background $color-itemStat
  border 1px solid $color-itemStat-border
  anim()

  @media (min-width: 1600px)
    width 490px

  &._opened
    background alpha($color-trn-hover, .5) !important
    border-color $color-line

  &._link
    cursor pointer
    opacity .9

    &._active
      opacity 1
      cursor default
      background alpha($color-trn-hover, .5) !important
      border-color alpha($color-rub, .8) !important

    &:hover
      opacity 1
      border-color $color-trn-hover-line

  &._small
    margin-bottom 15px

    @media (min-width: 1600px)
      margin-bottom 25px

  &:last-child
    margin-bottom 0

  &:hover
    background $color-trn-hover

  &__in
    display flex
    align-items center
    padding 20px

    ^[0]._small &
      padding 15px

  &__icon
    padding-right 25px

  &__content
    display flex
    flex-flow column nowrap
    flex-grow 1

  &__name
    flex-grow 1
    padding-left 5px
    text-transform capitalize
    font-size 1.1rem
    white-space nowrap

  &__text
    display flex
    padding-bottom 15px

  &__price
    min-width 105px
    max-width 125px
    padding-right 5px
    text-align right

  &__graph
    flex-grow 1
    overflow hidden
    margin-bottom 6px
    border-radius 3px
    background $color-graph

    &:last-child
      margin-bottom 0

  &__graph__in
    height .8rem
    border-radius 0

    &._expense
      background $color-expense

    &._income
      background $color-income

  &__trns
    cursor default
    padding 0 15px 10px
