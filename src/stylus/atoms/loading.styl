.loading
  display flex
  align-items center
  justify-content center
  position fixed
  z-index 100
  left 0
  top 0
  width 100%
  height 100%
  color $color-main
  font-size 3rem
  background alpha($color-layout, .9)

  &__in
    display block
    text-align center

  &__name
    padding-bottom 4rem

    &._error
      color red

  &__update
    cursor pointer
    display inline-flex
    border-bottom 1px solid $color-link
    anim()

    &:hover
      color $color-link
