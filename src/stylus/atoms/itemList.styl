// List Item
// ===============================================
.items
  padding-bottom 40px

.itemList
  position relative
  cursor default
  overflow hidden
  margin-bottom -1px
  padding 0 20px
  color $color-second
  font-size .85rem
  $font-secondary()

  @media (min-width: 768px)
    padding 0 30px

  &._active
    & ^[0]__content
      margin 0 -30px
      padding 0 30px
      border-bottom-color $color-sidebar-bg-active

    & ^[0]__actions
      right 20px

    & ^[0]__content
    & ^[0]__actions
      background $color-sidebar-bg-active

  &._editable
    & ^[0]__content
      margin 0 -30px
      padding 0 30px
      border-bottom-color $color-sidebar-bg-edit

    & ^[0]__actions
      right 20px

    & ^[0]__content
    & ^[0]__actions
      background $color-sidebar-bg-edit

    & ^[0]__action
      opacity 1

  &._link
    cursor pointer

  &._delete
    cursor default
    border-color $color-expense !important

  &._open
    padding-bottom 30px

    & ^[0]__content
      margin 0 -30px
      padding 0 30px
      border-bottom-color transparent !important

    & ^[0]__actions
      right 25px

    & ^[0]__content
    & ^[0]__actions
      background $color-sidebar-bg-active

    & ^[0]__action
      opacity .3

    &:hover ^[0]__content
    &:hover ^[0]__actions
      background $color-sidebar-bg-active

    &:hover ^[0]__content:hover
      background $color-itemList-hover

      & ^[0]__actions
        background $color-itemList-hover

      & ^[0]__action
        opacity .3

      & ^[0]__action:hover
        opacity 1

      & ^[0]__name
        color $color-sidebar-white-light

    &:hover ^[0]__name
      color $color-sidebar-white-lighter

    &:hover ^[0]__action
      opacity .3

    &._editable
      border-bottom-color $color-sidebar-bg-edit

  &:first-child
    margin-top 0

  &:last-child
    margin-bottom 0

    & ^[0]__content
      border-bottom-color transparent

  &:hover
    & ^[0]__name
      color $color-sidebar-white-light

    & ^[0]__content
      margin 0 -30px
      padding 0 30px
      border-bottom-color $color-itemList-hover

    & ^[0]__actions
      right 25px

    & ^[0]__content
    & ^[0]__actions
      background $color-itemList-hover

    & ^[0]__action
      opacity .3

    & ^[0]__action:hover
      opacity 1

  &__content
    position relative
    display flex
    flex-flow row nowrap
    flex-grow 1
    align-items center
    height 49px
    color $color-second
    border-bottom 1px solid $color-itemList-border

  &__icon
    margin-right 10px

    @media (min-width: 1200px)
      margin-right 10px

  &__name
    display flex
    align-items center
    justify-content flex-start
    flex-grow 1
    padding-top 1px
    padding-right 70px
    line-height normal
    // color $color-sidebar-white-lighter
    // font-size 16px
    $typo-item-name()

    @media $after768
      padding-right 60px
      font-size 14px

    &__list
      flex-grow 1
      display flex
      font-size 1rem
      margin-left 20px
      opacity .5

  &__text
    display flex
    padding-bottom 10px

  &__money
    padding-top 2px
    display flex
    align-items flex-end
    flex-flow column wrap
    $typo-money()
    font-size .85rem
    line-height normal
    text-align right

    ^[0]:hover &
    ^[0]._active &
      color $color-sidebar-white-light

    &._two
      flex-flow row nowrap

    .sub
      font-weight none
      font-size .85rem
      color $color-sidebar-grey-alpha
      ^[0]:hover &
      ^[0]._active &
        color $color-sidebar-white-lighter

  &__actions
    position absolute
    top 1px
    right -5px
    display flex
    align-items center
    height calc(100% - 2px)
    background $color-itemList-bg

  &__action
    opacity .3
    display flex
    justify-content center
    align-items center
    width 35px
    height 100%
    font-size 18px
    cursor pointer

    @media $after768
      width 30px
      font-size 1rem

    &:active
      @media (max-width: 768px)
        background $color-sidebar-bg-hover

    &:hover
      opacity 1


// List Item Child
// ===============================================
.itemListChild
  cursor default
  position relative
  display block
  color $color-second

  &._link
    cursor pointer

  &._editable
    & ^[0]__content
      margin 0 -30px
      padding 0 30px
      padding-left 44px

    & ^[0]__actions
      right 25px

    & ^[0]__content
    & ^[0]__actions
      background $color-sidebar-bg-edit

    & ^[0]__action
      opacity 1

  &:hover
    & ^[0]__content
      margin 0 -30px
      padding 0 30px
      padding-left 44px

    & ^[0]__actions
      right 25px

    & ^[0]__name
      color $color-sidebar-white-light

    & ^[0]__content
    & ^[0]__actions
      background $color-itemList-hover

    & ^[0]__action
      opacity 1

  &__content
    @extend .itemList__content
    height 40px
    padding-left 14px
    border-bottom 0

  &__icon
    @extend .itemList__icon

  &__name
    @extend .itemList__name

  &__text
    @extend .itemList__text

  &__actions
    @extend .itemList__actions

  &__action
    @extend .itemList__action
