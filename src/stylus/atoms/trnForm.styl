.trnForm
  position relative
  padding 60px 0

  @media (min-width: 1300px)
    z-index 3
    position fixed
    right 0
    top 0
    height 100%
    background $color-sidebar
    box-shadow 0 0 5px $color-sidebar


  &__in
    display flex
    align-items center
    height 100%

    @media (min-width: 1300px)
      width 590px

  &__form
    flex-grow 1
    overflow hidden
    padding 0 20px

    @media (min-width: 1300px)
      padding 0px 80px

  &__errors
    font-weight bold
    font-size 1.2rem
    color $color-expense
    margin-bottom 2rem

  &__icons
    margin-bottom 50px

  &__categories
    position absolute
    left 0
    top 0
    width 100%
    background $color-sidebar

    &__in
      overflow-y scroll
      height 100%
      padding 30px 20px
      scrollbar()

      @media (min-width: 1300px)
        padding 58px 60px

  &__header
    display flex
    align-items center
    justify-content space-between
    margin-bottom 30px
    padding-bottom 7px
    border-bottom 1px solid $color-line-account

    &__close
      margin-top -5px

  &__filter
    display flex
    margin-bottom 30px

  &__date
    display flex
    margin-bottom 30px
    justify-content space-between
    align-items center
    font-size 1rem

    &__value
      min-width 60px
      display flex
      align-items center
      justify-content center
      padding-left 15px
      text-transform uppercase
      font-size 1.6rem
      font-weight bold
      $font-numbers()
      @media (min-width: 1300px)
        min-width 160px

      &__in
        padding-left 10px

    &__link
      margin-top -3px
      padding 15px 30px
      opacity .5
      border none
      color $color-main
      cursor pointer
      anim()

      @media (min-width: 1300px)
        padding 15px 50px

      ^[1]:hover &
        opacity 1
        background alpha(white, .3)
        border-radius 3px

  &__desc
    height 70px

  &__actions__btn
    display inline-flex
    padding 20px 80px
    color $color-main
    font-size 1rem
    font-weight bold
    text-transform uppercase
    letter-spacing 2px
    background $color-line
    border 1px solid transparent
    border-radius 3px
    cursor pointer
    anim()

    &:hover
      color $color-link
      border-color $color-link

.trnFormToogle
  cursor pointer
  z-index 15
  position fixed
  width 20px
  height 100%
  right 0
  top 0
  display flex
  align-items flex-start
  justify-content center
  color $color-second
  anim()

  @media (min-width: 1300px)
    width 40px
    height 100%
    right 6px

  &:active
    background $color-side-toogle

  @media (min-width: 1300px)
    &:hover
      background $color-side-toogle

  &__icon
    display flex
    display none
    align-items center
    justify-content center
    margin-right 20px
    margin-top -10px
    color $color-main
    font-size 4rem
    $font-numbers()
    border 2px solid transparent
    border-radius 50%
    anim()

    @media (min-width: 1300px)
      margin-right 46px
      margin-top 26px

    ^[0]:hover &
      color $color-link

    ^[0]._active &
      color $color-link
      transform rotate(45deg)
