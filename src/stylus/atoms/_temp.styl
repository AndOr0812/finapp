.highcharts-data-label-box {
  fill: blue;
  stroke: gray;
  stroke-width: 1px;
}
.highcharts-data-label {
  font-weight: normal;
}
.highlight .highcharts-data-label-box {
  fill: red;
  stroke-width: 2px;
  stroke: black;
}
.highlight.highcharts-data-label text {
  font-weight: bold;
  fill: white;
}
.mb20
  margin-bottom 20px
.mb40
  margin-bottom 40px

.header
  z-index 3
  position absolute
  width 100%
  left 0
  top 0
  padding 0px 0px
  background alpha(#080808, .8)

  &__in
    display flex
    flex-flow row
    align-items center
    justify-content space-between

  &__item
    flex 0 1
    font-size 2rem
    padding 10px 10px

    &:active
      background $color-body


.toogleGroupByParent
  position absolute
  left 25px
  padding-bottom 100px
  opacity .5
  anim()

  &:hover
    opacity 1

  &__link
    display flex
    align-items center
    justify-content center
    min-width 70px
    min-height 70px
    padding 10px
    margin-bottom 20px
    font-size 1.3rem
    background $color-itemStat
    border 1px solid $color-itemStat-border
    anim()

    &:hover
      opacity 1
      border-color $color-trn-hover-line

.temp1
  padding-bottom 50px
  display flex
  justify-content space-between
  flex-flow column wrap

  @media (min-width: 1300px)
    flex-flow row wrap
    padding-bottom 80px

  &__item
    flex-grow 1
    padding-bottom 10px

    @media (min-width: 1300px)
      flex-grow 0
      width 30%
      padding-bottom 0

    &:last-child
      padding-bottom 0

.CHANGE1
  display flex
  justify-content space-between
  flex-grow 1
  flex-flow column wrap

  @media (min-width: 768px)
    flex-flow row nowrap

  &__item
    flex-grow 1
    order 2

    &:last-child
      display flex
      justify-content center
      order 1
      flex-grow 0

      @media (min-width: 768px)
        order 2
        padding-top 0
        padding-left 170px
        padding-right 80px

.grid
  display grid
  grid-template-columns minmax(90px, 100px) minmax(65px, 1fr) auto auto
  grid-column-gap 15px
  padding 10px 0
  padding-right 15px
  border 1px solid transparent
  anim()

  &._form
    grid-template-columns 40px minmax(100px, auto) minmax(65px, auto) 1fr auto auto

  &._editable
    border 1px solid $color-rub
    border-left 10px solid $color-rub

    & ^[0]__item._action
      opacity 1

  &._updated
    border-top 1px solid $color-income
    border-bottom 1px solid $color-income

  &__item
    align-self center

    &._description
      padding 10px 0 10px
      font-size .8rem
      grid-column 2 / 5

    &._price
      text-align right
      padding-right 5px
      line-height 1.3rem

    &._none
      display none

    &__date
      font-size .8rem
      padding-bottom 5px

    &__category
      display flex
      font-size .9rem
      white-space nowrap
      padding-bottom 10px

      a&
        color $color-main
        &:hover
          color $color-link

    &__account
      display flex
      font-size .9rem
      white-space nowrap

      a&
        color $color-main
        &:hover
          color $color-link

    &._action
      width 36px
      opacity .2
      cursor pointer
      padding 15px 10px
      font-size 1.5rem
      text-align center
      anim()

      @media (min-width: 768px)
        width 46px

      &:hover
        opacity 1
        color $color-main

.panel
  margin-bottom 60px
  padding 30px
  background $color-trn
  border-radius 3px

  .link
    margin 5px 0px
