.grid
  display grid
  grid-template-columns minmax(90px, 100px) minmax(65px, 1fr) auto auto
  grid-column-gap 15px
  padding 0
  anim()

  &._form
    grid-template-columns 40px minmax(100px, auto) minmax(65px, auto) 1fr auto auto

  &._editable
    z-index 2
    position relative
    border-top 1px solid $color-rub
    border-bottom 1px solid $color-rub

  &._updated
    border-top 1px solid $color-income
    border-bottom 1px solid $color-income

  &__item
    align-self center

    &._description
      padding 5px 0 10px
      font-size .8rem
      grid-column 2 / 5

    &._price
      text-align right
      padding-right 5px
      line-height 1.3rem

    &._none
      display none

    &__date
      font-size .8rem
      padding-bottom 5px

    &__account
      font-size .9rem
      white-space nowrap

    &._action
      width 46px
      opacity .2
      cursor pointer
      padding 15px 10px
      font-size 1.5rem
      text-align center
      anim()

      &:hover
        opacity 1
        color $color-main

.hey
  display grid
  grid-template-columns repeat(1, 1fr)
  font-size 1rem
  align-self flex-start

  .date__period
    padding-bottom 20px
    &:last-child
      padding-bottom 0

  .date__item
    cursor pointer
    padding 8px 10px
    anim()
    border-radius 3px
    color $color-main
    text-transform none
    font-weight normal
    $font-primary()

    &:hover
      color #444
      background #f3f8fa

    &._active
      cursor default
      background #5e7a88
      color white

.panel
  padding 30px
  background $color-trn
  border-radius 3px

.gridTable
  display grid
  grid-template-columns minmax(200px, 540px) minmax(200px, 540px)
  grid-column-gap 160px
  grid-row-gap 60px
  @media $pcNew
    grid-column-gap 150px

  &._fullWidth
    max-width 2000px
    grid-template-columns 340px minmax(400px, 1200px)
    @media $pcNew
      grid-column-gap 290px

  &._SummaryPeriodHorizontal
    max-width 2000px
    grid-template-columns 360px minmax(500px, 550px)
    grid-column-gap 60px

    @media $laptopNew
      grid-column-gap 100px

    @media $pcNew
      grid-column-gap 325px


