.trnItem
  position relative
  min-height 30px
  display flex
  flex-flow column wrap
  justify-content space-between
  align-items center
  margin 0 0
  margin-bottom -1px
  padding 10px 0
  font-size .9rem
  color $color-grey

  &:last-child
    margin-bottom 0
    border-color transparent

  &._padding:hover
    margin-left -10px
    margin-right -10px
    padding-left 10px
    padding-right 10px
  
  &:hover
    @media $after768
      color $color-main
      background #222222
      border-color #292929

  &__content
    width 100%
    display flex
    align-items center

  &__pic
    //

  &__cell
    padding-right 20px

  &__price
    width 90px
    margin-right 20px
    text-align right

    @media $after768
      margin-right 30px

  &__line
    font-size .8rem
    padding-bottom 5px

    &._date
      font-size .7rem

    &:last-child
      padding-bottom 0

  &__actions
    position absolute
    top 1px
    right 0px
    display flex
    align-items center
    height calc(100% - 2px)
    // background $color-itemList-bg

    @media (min-width: 768px)
      opacity 0

    ^[0]._open:hover &
      @media $after768
        background #222222

    ^[0]._open &
      background $color-sidebar-bg-active

    ^[0]:hover &
      @media $after768
        opacity 1
        background #222222

    ^[0]._editable &
      opacity 1
      background $color-sidebar-bg-edit

    ^[0]._active &
      background $color-sidebar-bg-active
    
    ^[0]._padding:hover &
      right 10px

  &__action
    display flex
    justify-content center
    align-items center
    width 40px
    height 100%
    font-size 1.2rem
    cursor pointer
    anim()

    @media (max-width: 768px)
      &:active
        background $color-sidebar-bg-hover

    @media (min-width: 768px)
      opacity .3
      width 40px
      font-size 1rem

    &:hover
      opacity 1

  &__description
    width 100%
    padding-top 5px
    padding-left 140px
    padding-right 10px
    font-size .8rem

    @media $after768
      text-align right

    &._big
      @media $after768
        padding-left 190px
        padding-bottom 5px
