a
  display inline-flex
  text-decoration none

.link
  display inline-flex
  padding-bottom 5px
  margin-bottom -5px
  color $color-link
  border-bottom 1px solid transparent
  tdn()
  anim()
  &:hover
    border-color $color-link

.btn
  display inline-flex
  padding 15px
  margin-right 15px
  color $color-main
  font-size 1rem
  font-weight bold
  text-transform uppercase
  letter-spacing 2px
  justify-content center
  background $color-line
  border 1px solid $color-body
  border-radius 3px
  cursor pointer
  anim()

  &:hover
    border-color $color-link

  &:last-child
    margin-right 0

  &._active
    font-weight bold
    color $color-link

  &._big
    padding 25px 50px
    background $color-link
    color #dcdcdc

  &._small
    margin-right 10px
    padding 5px 10px

  &._mini
    margin-right 0
    padding 10px 15px
    font-size .8rem
    background none
    text-transform none

  &._transFix
    margin-left 15px
    width 160px
    background none
    text-transform none
