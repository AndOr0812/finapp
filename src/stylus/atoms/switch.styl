.switch
  display flex
  flex-flow row wrap
  justify-content space-between
  padding-bottom 20px
  max-width 490px

  @media (min-width: 768px)
    padding-bottom 60px
    align-items flex-end
    

  @media (min-width: 768px)
    flex-flow row nowrap

  &:last-child
    padding-bottom 0

  &__item
    padding-bottom 20px

    @media (min-width: 768px)
      padding-bottom 0

  a
    padding 0 5px
    padding-bottom 10px
    white-space nowrap
    opacity .3
    cursor pointer
    display inline-flex
    color $color-second
    font-size 1.5rem
    font-weight bold
    letter-spacing 3px
    line-height 1rem
    text-transform uppercase
    border-bottom 2px solid transparent
    $font-numbers()
    anim()

    &:hover
      opacity 1

    &._active
      opacity 1
      cursor default
      border-bottom-color $color-link

    &._incomes
      color $color-income

    &._expenses
      color $color-expense

    &._history
      color $color-main
