.switch
  display flex
  flex-flow column wrap
  align-items center
  max-width 1060px
  margin 0 auto
  padding-bottom 20px

  @media (min-width: 1300px)
    padding-bottom 80px

  @media (min-width: 1300px)
    flex-flow row nowrap

  &:last-child
    padding-bottom 0

  &__item
    padding-bottom 20px

    @media (min-width: 1300px)
      padding-right 80px
      padding-bottom 0

  a
    opacity .6
    cursor pointer
    display inline-flex
    color $color-second
    font-size 1.6rem
    font-weight bold
    letter-spacing 2px
    text-transform uppercase
    $font-numbers()

    &:hover
      opacity 1
      padding 20px
      margin -20px -20px -20px -20px
      background $color-trn-hover

    &._active
      padding 0
      margin 0
      font-size 3rem
      letter-spacing 4px
      opacity 1
      cursor default
      color $color-main
      background none

    &._incomes
      color $color-income

    &._expenses
      color $color-expense

    &._history
      color $color-main
