.switch
  display flex
  flex-flow column wrap
  align-items flex-end
  justify-content space-between
  padding-bottom 20px
  max-width 490px

  @media (min-width: 768px)
    padding-bottom 60px

  @media (min-width: 768px)
    flex-flow row nowrap

  &:last-child
    padding-bottom 0

  &__item
    padding-bottom 20px

    @media (min-width: 768px)
      padding-bottom 0

  a
    white-space nowrap
    opacity .3
    cursor pointer
    display inline-flex
    color $color-second
    font-size 1.5rem
    font-weight bold
    letter-spacing 2px
    line-height 1rem
    text-transform uppercase
    $font-numbers()

    &:hover
      opacity 1

    &._active
      opacity 1
      cursor default
      font-size 2rem
      letter-spacing 3px

    &._incomes
      color $color-income

    &._expenses
      color $color-expense

    &._history
      color $color-main
