// #ss
// ===============================================
.summaryShort
  color $color-second

  @media $laptop
    min-width 300px
    margin -1rem -8px -10px -8px

  &._pb
    padding-bottom 60px

  &._pbs
    padding-bottom 40px

  &__empty
    margin-top 20px
    margin-bottom 10px
    padding-left 10px
    font-weight bold

  // #ssi
  // ===============================================
  &__item
    position relative
    display flex
    flex 1 1 45%
    height 45px
    padding 0 10px
    align-items center
    border-bottom 1px solid $color-line-summary
    anim-all()

    @media $laptop
      flex-basis 100%
      max-width 100%
      height 3.5rem
      padding 0 10px

    a&:hover
      color $color-main

    &:last-child
      margin 0
      border 0

    &._heightNone
      height inherit

    &__total
      text-align right
      width 120px

    &__label
      flex-grow 1
      font-weight bold
      letter-spacing 1px

    &__icon
      width 45px
      $fs = 1.5rem

      &._expenses
        fa(minus-circle)
        font-size $fs

      &._incomes
        fa(plus-circle)
        font-size $fs

      &._total
        fa(area-chart)
        font-size $fs

      &._month
        fa(cubes)
        font-size $fs

      &._year
        fa(tachometer)
        font-size $fs
