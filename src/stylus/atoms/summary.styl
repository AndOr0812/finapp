.summaryShort
  min-width 200px
  margin-left -8px
  color $color-second
  margin-top -15px

  @media (min-width: 1900px)
    width 360px

  &._pb
    padding-bottom 50px

    @media (min-width: 1300px)
      padding-bottom 70px

  &._pbs
    padding-bottom 20px

    @media (min-width: 1300px)
      padding-bottom 40px

  &__empty
    margin-top 20px
    margin-bottom 10px
    padding-left 10px
    font-weight bold

  &:last-child
    margin-bottom -10px

  // #ssi
  // ===============================================
  &__item
    position relative
    display flex
    flex 1 1 45%
    height 45px
    padding 0 10px
    align-items center
    border-bottom 1px solid $color-line-summary
    anim-all()

    @media $laptop
      flex-basis 100%
      max-width 100%
      height 60px
      padding 0 10px

    a&:hover
      color $color-main

    &:last-child
      margin 0
      border 0

    &._heightNone
      height inherit

    &__total
      text-align right
      width 120px

    &__label
      flex-grow 1
      font-weight bold
      letter-spacing 1px

    &__icon
      width 45px
      $fs = 1.5rem

      &._expenses
        fa(minus-circle)
        font-size $fs

      &._incomes
        fa(plus-circle)
        font-size $fs

      &._total
        fa(area-chart)
        font-size $fs

      &._month
        fa(cubes)
        font-size $fs

      &._year
        fa(tachometer)
        font-size $fs
