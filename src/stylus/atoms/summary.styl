.summaryShort
  color $color-second
  margin 0 -10px
  margin-top -10px

  @media (min-width: 768px)
    margin 0 -10px

  &._pb
    padding-bottom 40px

    @media (min-width: 768px)
      padding-bottom 70px

  &._pbs
    padding-bottom 20px

    @media (min-width: 768px)
      padding-bottom 38px

  &__empty
    margin-top 20px
    margin-bottom 10px
    padding-left 10px
    font-weight bold

  &:last-child
    margin-bottom -10px

    @media (min-width:768px)
      margin-bottom -15px

  // #ssi
  // ===============================================
  &__item
    position relative
    display flex
    flex 1 1 45%
    height 45px
    padding 0 10px
    align-items center
    border-bottom 1px solid $color-line-summary
    anim-all()

    @media (min-width: 768px)
      flex-basis 100%
      max-width 100%
      height 45px

    a&:hover
      color $color-main

    &:last-child
      margin 0
      border 0

    &._link
      cursor pointer

      &:active
        background alpha($color-line-summary, .5)

      @media (min-width: 768px)
        &:hover
          background alpha($color-line-summary, .5)

    &__icon
      width 35px
      text-align center
      $fs = 1rem

      &._expenses
        fa(minus-circle)
        font-size $fs

      &._incomes
        fa(plus-circle)
        font-size $fs

      &._total
        fa(area-chart)
        fa(bar-chart)
        font-size $fs

      &._average
        fa(line-chart)
        font-size $fs

      &._left
        fa(align-left)
        font-size $fs

      &._day
        fa(sun-o)
        font-size $fs

      &._spend
        fa(calendar-minus-o)
        font-size $fs

    &__label
      padding-left 22px
      flex-grow 1
      font-size .8rem
      text-transform uppercase
      font-weight bold
      letter-spacing 2px
      $font-numbers()

    &__total
      padding-right 2px
      text-align right
