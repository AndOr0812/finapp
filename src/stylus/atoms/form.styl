.amount
  display flex
  align-items center
  justify-content center
  margin 0 auto
  padding-bottom 50px

  .amountCount
    &:focus
      outline none

  &._income
    .amountCount
      background $color-income

    .amountValueInput
      color $color-income
      border-color $color-income

  &._expense
    .amountCount
      background $color-expense

    .amountValueInput
      color $color-expense
      border-color $color-expense

.amountCount
  overflow hidden
  display flex
  width 60px
  height 60px
  justify-content center
  align-items center
  font-size 5rem
  color #e4e4e4
  $font-numbers()
  cursor pointer
  background $color-line
  anim()

.amountValue
  flex 1 1

.amountValueInput
  width 100%
  height 60px
  padding 0 15px
  font-size 2rem
  $font-numbers()
  color $color-main
  background alpha($color-line, .5)
  border 2px solid $color-line
  anim()


.descInput
  color $color-main
  font-size 1rem
  width 100%
  border-bottom 1px solid $color-line
