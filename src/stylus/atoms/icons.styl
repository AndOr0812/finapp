.icon
  position relative
  display flex
  min-width 35px
  height 35px
  padding-left 1px
  align-items center
  justify-content center
  color alpha(white, .7)
  background $color-icon
  border-radius 3px
  border 3px solid transparent
  anim()

  @media (min-width: 768px)
    min-width 45px
    height 45px

  .fa
    font-size 1.5rem
    letter-spacing 0

  .mdi
    font-size 1.7rem

  &._mr
    margin-right 20px

  &._text
    padding 0 10px

  &._active
    color white
    border-color $color-main !important
    background $color-link !important

  &._more
    background $color-graph

  &._link
    cursor pointer
    anim()

    @media (min-width: 768px)
      &:hover
        border-color $color-main !important

    &:focus
      outline none
      border-color $color-rub

  &__abbr
    font-size 1rem
    font-weight bold

  &__label
    pointer-events none
    z-index 2
    visibility hidden
    opacity 0
    position absolute
    left 50%
    top -43px
    padding 10px 15px
    font-size 1rem
    font-weight normal
    text-transform none
    letter-spacing 1px
    background #242424
    border-radius 3px
    transform translate(-50%, 50%)
    white-space nowrap
    transition all .3s cubic-bezier(0.17, 0.04, 0.03, 0.94)

    ^[0]:hover &
      @media (min-width: 768px)
        opacity 1
        visibility visible
        transform translate(-50%, 0)

  &__label2
    padding-left 15px
    font-size 1.1rem
    font-weight bold

.icon-incomes
  font-size 2.5rem
  margin-right 20px
  fa(pie-chart)
  background none
