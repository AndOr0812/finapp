label, button, input, select, textarea
  letter-spacing .5px
  border none
  background none
  outline none
  $font-primary()


.submit__btn
  display inline-flex
  padding 15px 50px
  color $color-main
  font-size 14px
  font-weight bold
  text-transform uppercase
  letter-spacing 2px
  background $color-line
  border 1px solid transparent
  border-radius 3px
  cursor pointer
  anim()

  &:hover
    color $color-link
    border-color $color-link

// Field
// ==============================================
.input
  display flex
  flex-flow column wrap
  align-items flex-start
  position relative
  padding-bottom 35px

  &:last-child
    padding-bottom 0

  &__field
    width 100%
    min-width 50px
    padding 5px 0
    margin-bottom 0
    color $color-main
    font-size .9rem
    background transparent
    border-bottom 1px solid $color-line-account
    anim()

    @media (min-width: 768px)
      padding 10px 0

    &._color
      cursor pointer
      height 40px
      width 40px
      padding 0
      margin 0
      border none
    
    &::-webkit-input-placeholder
      font-weight bold
      font-size .7rem
      text-transform uppercase

    &:focus, &:active
      &::-webkit-input-placeholder
        color alpha($color-main, .3)

  &__label
    position relative
    margin-top 3px
    font-size .7rem
    text-transform uppercase
    color $color-grey
    font-weight bold
    letter-spacing 1px

    @media (min-width: 768px)
      margin-top 6px

.input-filter
  display block
  width 100%
  height 35px
  max-width 550px
  padding 5px 15px
  padding-left 0
  padding-bottom 10px
  color $color-main
  font-size .8rem
  letter-spacing 2px
  cursor pointer

  &::-webkit-input-placeholder
    color $color-grey
    font-size .8rem
    letter-spacing 1px

  &:focus, &:active
    text-transform none
    font-weight normal
    letter-spacing 0px


    &::-webkit-input-placeholder
      color $color-grey

  

// Textarea
// ==============================================
.textarea
  width 238px
  max-width 100%
  height 200px
  margin-bottom 10px
  padding 10px 10px
  background #fff
  border 1px solid #c8d9eb
  anim()


// Field, Textarea Hover
// ==============================================
.input
.textarea
  &:hover
    //

  &:focus
    // background #f4f9ff

  &.error
    color #e44343
    border-color #e44343

  &.valid
    color #3ac020
    border-color #3ac020

.checkbox
  display flex
  padding-bottom 40px

  &__none
    display none

  &__input
    position relative
    top -2px
    width 16px
    height 16px
    border 1px solid $color-grey
    border-radius 3px
    vertical-align middle
    transition background .1s ease
    cursor pointer

    &:after
      content ''
      position absolute
      top 1px
      left 5px
      width 3px
      height 9px
      opacity 0
      transform rotate(45deg) scale(0)
      border-right 2px solid white
      border-bottom 2px solid white
      transition all .3s ease
      transition-delay .15s

  &__label
    color $color-grey
    padding-left 10px
    font-size .9rem
    vertical-align middle
    cursor pointer
    anim()

.checkbox__none:checked ~ .checkbox__label
  color $color-main

.checkbox__none:checked ~ .checkbox__input
  border-color transparent
  background $color-link
  animation jelly .6s ease

  &:after
    opacity 1
    transform rotate(45deg) scale(1)

@keyframes jelly
  from
    transform scale(1, 1)
  30%
    transform scale(1.25, 0.75)
  40%
    transform scale(0.75, 1.25)
  50%
    transform scale(1.15, 0.85)
  65%
    transform scale(.95, 1.05)
  75%
    transform scale(1.05, .95)
  to
    transform scale(1, 1)
