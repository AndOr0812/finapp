label, button, input, select, textarea
  letter-spacing .5px
  border none
  background none
  outline none
  $font-primary()


.submit__btn
  display inline-flex
  padding 15px 50px
  color $color-main
  font-size 14px
  font-weight bold
  text-transform uppercase
  letter-spacing 2px
  background $color-line
  border 1px solid transparent
  border-radius 3px
  cursor pointer
  anim()

  &:hover
    color $color-link
    border-color $color-link

// Field
// ==============================================
.input
  display flex
  flex-flow column wrap
  align-items flex-start
  position relative
  padding-bottom 35px

  &:last-child
    padding-bottom 0

  &__field
    width 100%
    min-width 50px
    padding 5px 0
    margin-bottom 0
    color $color-main
    font-size .9rem
    background transparent
    border-bottom 1px solid $color-line-account
    anim()

    @media (min-width: 768px)
      padding 10px 0

    &._color
      cursor pointer
      height 40px
      width 40px
      padding 0
      margin 0
      border none

    &::-webkit-input-placeholder
      font-weight bold
      font-size .7rem
      text-transform uppercase

    &:focus, &:active
      &::-webkit-input-placeholder
        color alpha($color-main, .3)

  &__label
    position relative
    margin-top 3px
    font-size .7rem
    text-transform uppercase
    color $color-grey
    font-weight bold
    letter-spacing 1px

    @media (min-width: 768px)
      margin-top 6px

.input-filter
  display block
  width 100%
  height 35px
  max-width 550px
  padding 5px 15px
  padding-left 0
  padding-bottom 10px
  color $color-main
  font-size .8rem
  letter-spacing 2px
  cursor pointer

  &::-webkit-input-placeholder
    color $color-grey
    font-size .8rem
    letter-spacing 1px

  &:focus, &:active
    text-transform none
    font-weight normal
    letter-spacing 0px


    &::-webkit-input-placeholder
      color $color-grey



// Textarea
// ==============================================
.textarea
  width 238px
  max-width 100%
  height 200px
  margin-bottom 10px
  padding 10px 10px
  background #fff
  border 1px solid #c8d9eb
  anim()
