label, button, input, select, textarea
  letter-spacing .5px
  border none
  background none
  outline none
  $font-primary()


.submit__btn
  display inline-flex
  padding 15px 50px
  color $color-main
  font-size 14px
  font-weight bold
  text-transform uppercase
  letter-spacing 2px
  background $color-line
  border 1px solid transparent
  border-radius 3px
  cursor pointer
  anim()

  &:hover
    color $color-link
    border-color $color-link

// Field
// ==============================================
.input
  display flex
  flex-flow column wrap
  align-items flex-start
  position relative
  padding-bottom 35px

  &:last-child
    padding-bottom 0

  &__field
    width 100%
    padding 5px 5px
    margin-bottom 0
    font-size 1rem
    color $color-main
    background transparent
    border-bottom 1px solid $color-line-account
    anim()

    @media (min-width: 768px)
      padding 10px 10px

    &._color
      cursor pointer
      height 40px
      width 40px
      padding 0
      margin 0
      border none
      border-radius 3px
      @media (min-width: 768px)
        height 50px
        width 50px

    &:focus, &:active
      &::-webkit-input-placeholder
        color alpha($color-main, .1)

    &::-webkit-input-placeholder
      color alpha($color-main, .4)
      anim()

  &__label
    position relative
    margin-top 4px
    padding 0 5px
    font-size .8rem
    text-transform uppercase
    color $color-line-account
    font-weight bold
    letter-spacing 1px
    background $color-sidebar

    @media (min-width: 768px)
      margin-top 8px
      padding 0 10px

.input.date
  width inherit
  padding 0 10px
  text-align center
  border none
  border-bottom 1px solid $color-main

.input-filter
  display block
  width 100%
  max-width 550px
  padding 5px 15px
  padding-left 0
  padding-bottom 0px
  color $color-main
  font-size 14px
  font-weight bold
  text-transform uppercase
  letter-spacing 2px
  border 1px solid transparent
  border-radius 3px
  cursor pointer
  anim()

  &._nomargin
    margin-top 0
    margin-bottom 0

  &:focus, &:active
    padding-bottom 10px
    font-size 2rem
    text-transform none
    font-weight normal
    letter-spacing 1
    border-color $color-line
    background $color-layout
    &::-webkit-input-placeholder
      opacity 0

  &::-webkit-input-placeholder
    color $color-link
    font-size 12px
    font-weight bold
    text-transform uppercase
    letter-spacing 2px

// Textarea
// ==============================================
.textarea
  width 238px
  max-width 100%
  height 200px
  margin-bottom 10px
  padding 10px 10px
  background #fff
  border 1px solid #c8d9eb
  anim()


// Field, Textarea Hover
// ==============================================
.input
.textarea
  &:hover
    //

  &:focus
    // background #f4f9ff

  &.error
    color #e44343
    border-color #e44343

  &.valid
    color #3ac020
    border-color #3ac020


// Select
// ==============================================
.select
  width auto
  margin-bottom 10px
  padding 4px 10px
  background #fff
  border 1px solid #c8d9eb
  color #819397
  //font-size 16px

  option
    padding 5px 10px


// Radio
// label.radio > (radio__value + radio__label)
// ==============================================
.radio
  position relative
  display inline-flex
  margin-right 20px
  cursor pointer

  &__label
    display flex
    align-items center
    anim()

    &:before
      content ' '
      display block
      width 16px
      height 16px
      margin-top -1px
      margin-right 5px
      border 1px solid grey
      border-radius 50%

    &:after
      content ' '
      display block
      position absolute
      left 0
      top 0
      margin-top 5px
      margin-left 4px
      width 8px
      height 8px
      margin-right 10px
      border-radius 50%
      anim()

  &__value
    display none

    &:checked + ^[0]__label
      font-weight bold

      &:after
        background grey


// Checkbox
// ==============================================
.checkbox
  display flex
  padding-bottom 10px

  &__name
    cursor pointer
    padding-left 5px
    anim()

    &:hover
      color $color-link

  &__input
    &:checked
      & + .checkbox__name
        color $color-rub
