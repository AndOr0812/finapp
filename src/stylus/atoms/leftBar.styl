.sidebar
  overflow hidden
  z-index 1
  flex-shrink 0
  position relative
  background $color-sidebar
  anim()

  @media $laptop
    width 19rem
    border-right 2px solid $color-line-layout
    if $theme == "light"
      border-right-width 1px

  &__wrap
    @media $laptop
      z-index 3
      overflow-y auto
      position fixed
      left 0
      width 19rem
      height 100%
      scrollbar()

  &__in
    opacity 1
    display flex
    flex-flow row wrap
    align-content space-between
    height 100%

    .account
      padding 0 10px
      flex-grow 1
      &:first-child
        padding-bottom 20px

  &__menu
    display none
    z-index 2
    position fixed
    left 30px
    top 25px
    width 20px
    height 20px
    border-top 2px solid $color-second
    cursor pointer
    anim()

    &:before,
    &:after
      content ""
      position absolute
      width 100%
      height 2px
      background $color-second

    &:before
      top 5px

    &:after
      top 12px

  &._hidden
    width 20px
    cursor pointer

    &:hover
      background $color-line

    .sidebar__menu
      left 50px

    .sidebar__wrap
      opacity 0
      transform translateX(-100px)

.leftBarToogle
  cursor pointer
  position fixed
  left 20px
  top 10px
  font-size 1.5rem
  anim()

  &:hover
    color $color-link
