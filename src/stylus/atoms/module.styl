.module
  padding 35px 10px
  padding-bottom 40px
  border-bottom 3px solid alpha(black, .7)
  overflow-x auto
  scrollbar()

  @media $laptop
    padding 65px 60px
    padding-bottom 90px

  &:last-child
    border-bottom none

  &._bg
    background $color-layout

  &._fixHeight
    min-height 640px

  &__in
    display flex
