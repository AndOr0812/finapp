.module
  &._alt
    z-index 3
    background $color-module-bg-alt
    border-bottom 1px solid $color-module-border

  &._stat
    @media (min-width: 768px)
      min-height calc(100vh - 50px)

  &._mobileFixed
    @media $before768
      position fixed
      width 100%
      left 0
      top 56px

  &__in
    position relative
    $max-width()
    padding 30px 10px

    @media (min-width: 768px)
      padding 60px

    ^[0]._small &
      padding 30px 60px

    ^[0]._stat &
      padding 30px 0
      padding-top 0

      @media (min-width: 768px)
        padding 30px 60px

    &._stat
      padding 0

      @media (min-width: 768px)
        padding 0 60px

    ^[0]._stat &._mobileFixed
      @media $before768
        padding-top 130px
