.expenses
.expense
  $typo-money()
  color $color-expense

.incomes
.income
  $typo-money()
  color $color-income
  white-space nowrap

.sum
  $typo-money()
  color $color-sum


.moneyTitle
  font-size 24px
  font-weight bold
  letter-spacing 2px
  line-height 1rem
  text-transform uppercase
  $font-numbers()

  &._incomes
    color $color-income

  &._expenses
    color $color-expense

  &._pb
    padding-bottom 30px


.moneyBlock
  margin-bottom 30px
  padding-bottom 10px
  border-bottom 1px solid #232323

  &._noMargin
    margin-bottom 0
    padding-bottom 0
    border-bottom 0

  &__line
    display flex
    justify-content space-between
    padding-bottom 10px

    &:last-child
      padding-bottom 0

  &__title
    display flex
    justify-content space-between
    align-items center
    font-size 14px
    letter-spacing .5px
    font-weight bold
    color $color-sidebar-white-lighter
    $font-numbers()
    text-transform uppercase

    .mdi
      font-size 16px
      margin-right 8px
      color $color-grey

  &__total
    font-size 18px

  &__average
    display flex
    align-items center
    color $color-grey

    .sum
      color $color-sidebar-white-lighter
      font-size 15px
