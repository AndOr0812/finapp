.statChartFix
  position relative
  height 121px
  margin-bottom 20px
  border-bottom 1px solid #232323

.statChart2
  position absolute
  width 100%

  .statChart__in
    padding-bottom 10px
    margin 0 -7px

  .icon
    height 40px
    width 26px
    padding 20px 0 10px 0 !important

.statChart__item2
