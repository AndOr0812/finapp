.tooltip-trigger
  position relative
  &:hover
    .tooltip
      //

.stat__toogle
  z-index 2
  position absolute
  top 0
  padding $ms
  color $color-grey
  opacity .5
  text-align center

  @media $before768
    left 0

  @media $after768
    right -45px
    width 40px
    height 100%
    padding 17px 10px

  &:hover
    opacity 1
    background #191919

  &._active
    color $color-main


.chartYearsList
  background #171717


  &__item
    border-bottom 1px solid #0b0b0b
    &:nth-child(odd)
      background #191919


.yearChartGraph
  position relative
  display flex
  align-items flex-end
  justify-content center
  max-width 50px
  height 130px
  margin 0 auto

.yearChartGraph__text
  font-size 8px
  padding-bottom 5px

.tooltip
  display none
  pointer-events none
  z-index 2
  position absolute
  visibility hidden
  text-align left
  bottom 0
  left 50%
  width auto
  transform translate(-50%, 100%)

  .statChart__item:hover &
  .tooltip-trigger:hover &
    @media (min-width: 768px)
      visibility visible

  &__in
    opacity 0
    display block
    position relative
    z-index 2
    left 0px
    top 10px
    padding 15px 20px
    color $color-icon-text
    font-size .9rem
    font-weight normal
    text-transform none
    letter-spacing 1px
    background #242424
    text-align right
    border-radius 3px
    white-space nowrap

    .statChart__item:hover &
    .tooltip-trigger:hover &
      opacity 1
      transform translate(0, 0%)

  &__name
    margin-bottom 10px
    font-size 14px
    text-transform uppercase
    font-weight bold
    text-align right
    white-space nowrap
    $font-numbers()

  &__name-normal
    margin-bottom 10px
    font-size 14px
    text-align right
    white-space nowrap

  &__sum
    $typo-money()
    color $color-sum

  &__incomes
    $typo-money()
    color $color-incomes

  &__expenses
    $typo-money()
    color $color-expenses

