.statChartGraph2
  display flex
  align-items flex-end
  margin 0 auto
  height 70px

  &__in
    z-index 2
    position relative
    flex 1 1 auto

  &__total
    position absolute
    width 100%
    top 5px
    font-size .6rem
    text-align center


.statChart
  position relative

  &__in
    display flex
    align-items center
    opacity .8

    ^[0]._overflow &
      @media $before768
        opacity 1
        overflow-x auto
        direction rtl
        scrollbar()

    &:hover
      opacity 1

  &__item
    direction ltr
    flex-grow 0
    cursor pointer
    padding $mm $ms
    min-width 50px
    color $color-grey
    text-align center
    border-right 1px solid $color-sidebar

    @media $after768
      flex-grow 1
      min-width 100px
      padding $m

    &._active
    &._active:hover
      color $color-white
      cursor default
      background #111111

    &:first-child
      margin-right 0
      // border-left-color transparent

      @media $before768
        margin-right $m

    &:hover
      background #0b0b0b


  &__values
    display inline-block
    text-align right
    padding-top 10px

    &__row
      margin-bottom 1px
      $typo-money()
      font-size 13px

      &._expenses
        color $color-expenses

      &._incomes
        color $color-incomes

      &:last-child
        margin-bottom 0


  &__name
    font-size .8rem
    text-transform uppercase
    font-weight bold
    letter-spacing 0px
    text-align center
    white-space nowrap
    $font-numbers()

    &._padding
      padding-bottom 15px


