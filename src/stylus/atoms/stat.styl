.yearChartGraph
  position relative
  display flex
  align-items flex-end
  justify-content center
  max-width 50px
  height 115px
  margin 0 auto

.yearChartGraph__text
  font-size 8px
  padding-bottom 5px

.tooltip
  display none
  pointer-events none
  z-index 2
  position absolute
  visibility hidden
  text-align left
  bottom 0
  left 50%
  width auto
  transform translate(-50%, 100%)

  .statChart__item:hover &
    @media (min-width: 768px)
      visibility visible

  &__in
    opacity 0
    display block
    position relative
    z-index 2
    left 0px
    top 10px
    padding 10px 15px
    color $color-icon-text
    font-size .9rem
    font-weight normal
    text-transform none
    letter-spacing 1px
    background #242424
    text-align right
    border-radius 3px
    white-space nowrap

    .statChart__item:hover &
      opacity 1
      transform translate(0, 0%)

  &__incomes
    $typo-money()
    color $color-incomes

  &__expenses
    $typo-money()
    color $color-expenses

.yearChartFix
  position relative
  height 155px

.chartYears
  padding 20px 10px
  background #1c1c1c
  border-bottom 1px solid #141414

  @media $after768
    padding 30px 60px

  &:nth-child(odd)
    background #202020

  &:last-child
    //border-bottom 0


.yearChart
  position absolute
  width 100%
  margin-bottom 20px

  &__title
    margin-bottom 20px
    $typo-title()
    font-size 20px

  &__name
    position absolute
    left 0
    bottom 100px
    transform rotate(90deg)
    font-size 11px
    width 100px
    white-space nowrap
  
  &__stat
    @media $before768
      padding-bottom 30px


.statChartFix
  position relative
  height 121px
  margin-bottom 20px
  border-bottom 1px solid #232323

.statChart2
  position absolute
  width 100%

  .statChart__in
    padding-bottom 10px
    margin 0 -7px

  .icon
    height 40px
    width 26px
    padding 20px 0 10px 0 !important

.statChart__item2
  cursor pointer
  padding 0 8px

.statChart__item
  position relative

  &._small
    min-width 20px
    padding 0 2px
    padding-bottom 10px
    border none

    @media $after768
      padding 10px 10px
      padding-top 15px

  @media $after768
    max-width 120px

  &:hover
    @media $after768
      background #1c1c1c


.statChartGraph2
  display flex
  align-items flex-end
  margin 0 auto
  height 70px

  &__in
    position relative
    flex 1 1 auto

  &__total
    position absolute
    width 100%
    top 5px
    font-size .6rem
    text-align center


.statChart
  position relative

  &__in
    display flex
    align-items center
    opacity .8
    // overflow hidden

    @media $after768
      // overflow-x auto
      // scrollbar()

    &:hover
      opacity 1

  &__item
    min-width 100px
    flex 1 1
    cursor pointer
    padding 20px 20px
    color $color-grey
    text-align center
    border-right 1px solid $color-sidebar

    &._active
    &._active:hover
      color $color-white
      cursor default
      background $color-sidebar

    &:last-child
      margin-right 0
      border-right-color transparent

    &:hover
      background #111111


  &__values
    display inline-block
    text-align right
    padding-top 10px

    &__row
      margin-bottom 1px
      $typo-money()
      font-size 13px

      &._expenses
        color $color-expenses

      &._incomes
        color $color-incomes

      &:last-child
        margin-bottom 0


  &__name
    font-size .8rem
    text-transform uppercase
    font-weight bold
    letter-spacing 0px
    text-align center
    white-space nowrap
    $font-numbers()

    &._padding
      padding-bottom 15px


.statChartGraph
  position relative
  max-width 50px
  margin 0 auto
  display flex
  align-items flex-end
  justify-content center
  height 57px

  &._bigger
    height 95px

  &__in
    position relative
    display flex
    align-items flex-end
    justify-content center
    flex 1 1 auto
    max-width 6px
    margin 0 2px

    &._incomes
      background $color-income

    &._expenses
      background $color-expense

    &._empty
      height 1px
      background $color-line
