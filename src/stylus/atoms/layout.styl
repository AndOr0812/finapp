*
  boxsizing-borderbox()

html
  height 100%
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  // macos
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 12px

  @media $laptop
    font-size 16px

.body
  margin 0
  $font-primary()
  color $color-main
  line-height 1
  // letter-spacing 3px
  letter-spacing 1px
  background $color-body
  overflow-y scroll
  scrollbar()

  &._overflow
    overflow hidden

  @media (min-width: 768px)
    overflow hidden
    height 100%

.app
  display flex
  flex-flow column wrap
  min-height 100%

  @media (min-width: 768px)
    flex-flow row nowrap

.sidebar
  position fixed
  width 100%
  height 100vh
  left 0
  top 0
  z-index 3
  flex-shrink 0
  background $color-sidebar
  overflow hidden
  overflow-y scroll
  scrollbar()
  anim()

  @media (min-width: 768px)
    width 340px
    box-shadow 0 0 5px $color-sidebar

  &__wrap
    z-index 3
    height 100vh

    @media (min-width: 768px)
      width 340px

  &__in
    display flex
    flex-flow column nowrap
    justify-content space-between
    min-height 100vh
    padding 30px 30px

    @media (min-width: 768px)
      padding 40px 40px 30px 40px

.main
  @media (min-width: 768px)
    overflow hidden
    flex-shrink 0
    overflow-y scroll
    position fixed
    left 0rem
    top 0px
    width 100%
    height 100%
    scrollbar()
    anim()

    &._withLeftBar
      left 300px
      width calc(100% - 300px)

      @media (min-width: 768px)
        left 340px
        width calc(100% - 340px)

      @media (min-width: 1500px)
        left 340px
        width calc(100% - 340px)
