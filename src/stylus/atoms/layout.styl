*
  boxsizing-borderbox()

html
  height 100%
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  // macOS
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 14px

  @media $laptop
    font-size 16px

.body
  overflow-y scroll
  height 100%
  margin 0
  $font-primary()
  color var(--main-color)
  line-height 1
  letter-spacing 0
  background var(--main-background)
  scrollbar()
  user-select none

  @media $after768
    overflow hidden

  &._overflowNew
    position relative
    overflow hidden
    width 100%
    height 100%

  &._overflow
    overflow hidden

.app
  display flex
  flex-flow column wrap
  min-height 100%
  min-width 320px

  @media (min-width: 768px)
    flex-flow row nowrap

.main
  padding-top $header-height-mobile

  @media (min-width: 768px)
    overflow hidden
    flex-shrink 0
    overflow-y scroll
    position fixed
    width calc(100% - 290px)
    height calc(100% - 50px)
    left 290px
    top 50px
    padding 0
    scrollbar()
