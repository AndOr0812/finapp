.sidebar
  &__title
    padding-bottom 15px
    font-size 1rem
    font-weight bold
    letter-spacing 2px
    text-transform uppercase

  &__item
    padding-bottom 50px

    @media (min-width: 1300px)
      padding-bottom 60px

    @media (min-width: 1900px)
      padding-bottom 80px

    &:last-child
      padding-bottom 20px

  // Menu
  // ===============================================
  &__menu
    &__link
      cursor pointer
      margin-bottom 10px
      display block
      color $color-second
      font-size .8rem
      font-weight bold
      text-transform uppercase
      letter-spacing 2px
      border-bottom none
      anim()

      @media (min-width: 1500px)
        margin-bottom 20px

      @media (min-width: 1900px)
        // font-size 1.2rem

      &.active
        cursor default
        font-weight bold
        font-size 1.1rem
        margin-left -2px
        color $color-rub !important

        @media (min-width: 1900px)
          // font-size 1.6rem

      &:last-child
        margin-bottom 0

      &:hover
        color $color-main

  // Accounts
  // ===============================================
  &__accounts
    margin 0 -5px

    &__showAll
      cursor pointer
      position relative
      display block
      width 100%
      padding 5px 0
      font-size .8rem
      color alpha($color-second, .5)
      anim-all()

      @media (min-width: 1300px)
        padding 15px 0

      &:hover
        color $color-link

  &__account
    position relative
    display flex
    flex 1 1 45%
    flex-basis 100%
    height 35px
    margin-top -1px !important
    padding-left 30px
    padding-right 10px
    justify-content space-between
    align-items center
    color $color-second
    border-bottom 1px solid $color-trn-hover
    anim()

    @media (min-width: 1300px)
      height 50px

    @media (min-width: 1900px)
      height 60px

    &:before
      content " "
      position absolute
      left 10px
      top 50%
      width 8px
      height 8px
      margin-top -5px
      border-radius 50%
      background $color-line-account
      opacity .6
      anim()

    &:last-child
      margin-bottom 0
      border none

    &.account1
      &:before
        background #438259

    &.account2
      &:before
        background #ab68da

    &.account1.active
      color #438259

    &.account2.active
      color #ab68da

    &:hover
      margin 0 -25px
      padding-left 55px
      padding-right 35px
      background $color-trn-hover

    &:hover:before
      opacity 1
      left 35px

    &__value
      flex-flow row wrap
      $font-numbers()
      letter-spacing 1px
      color $color-sum
      font-weight bold
      text-align right

  // Summary
  // ===============================================
  &__summary__item
    position relative
    display flex
    height 35px
    margin-top -1px !important
    justify-content space-between
    align-items center
    color $color-second
    border-bottom 1px solid $color-trn-hover
    anim()

    @media (min-width: 1300px)
      height 50px

    @media (min-width: 1900px)
      height 60px

    &:last-child
      margin-bottom 0
      border none

    &__value
      flex-flow row wrap
      $font-numbers()
      letter-spacing 1px
      color $color-sum
      font-weight bold
      text-align right

// Sidebar Toogle
// ===============================================
.sidebarToogle
  z-index 15
  position fixed
  width 40px
  height 100%
  left 0px
  top 0
  cursor pointer
  display flex
  align-items flex-start
  justify-content center
  right 0px
  color $color-second
  font-size 1.5rem
  anim()

  @media (min-width: 1300px)
    width 40px

  &:active
    background $color-side-toogle

  @media (min-width: 1300px)
    &:hover
      background $color-side-toogle
