.items
  margin-bottom 60px
  margin-left -15px
  max-width 550px
  overflow-x auto


// Item
// ===============================================
.item
  position relative
  color $color-second
  border-radius 3px
  anim()

  &:last-child
    border-bottom none

  &:hover
    color $color-main
    background $color-trn-hover

  &:first-child
    border-top 0

  &._selected
    border-top-color $color-body
    background alpha(white, .04) !important

  // item__edit
  // ===============================================
  &__edit
    border-top 2px solid $color-body
    padding 30px

  // item__el
  // ===============================================
  &__el
    display flex
    align-items center
    padding 15px 0
    flex-shrink 0
    color $color-second

    &:first-child
      margin-left 15px

    &:last-child
      margin-right 15px

    &._account
      width 130px
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

    &._action
      width 56px
      justify-content center
      font-size 1.5rem
      cursor pointer
      anim()

      &:hover
        color $color-link

      &:last-child
        margin-right 0

    &._category
      flex 1 1
      overflow hidden

    &._date
      margin-left 0
      text-align left

    &._delete
      padding-right 10px
      text-align right

    &._grow
      flex-grow 1

    &._name
      width 200px

    &._nopadding
      padding 10px 0

    &._pad
      padding-right 16px

    &._icon
      padding-right 16px
      width 66px

    &._price
      display flex
      flex-flow row wrap
      justify-content flex-end
      width 145px
      padding-right 30px
      text-align right

      &:last-child
        padding-right 0

      div
        flex 1 1 100%

    &._second
      color $color-second
      font-size .9rem

    &._static
      display block
      position relative

    &._question
      display flex
      justify-content flex-end
      flex-grow 1
      margin 0
      padding 0
      font-size 1.2rem
      color $color-expense

    &._yes
      cursor pointer
      padding-right 15px
      font-size 1.5rem
      &:hover
        color $color-link

    &._no
      cursor pointer
      font-size 1.5rem
      &:hover
        color $color-link

    &.link, &._link
      cursor pointer
      padding-right 0
      font-size 1.5rem
      opacity 0
      anim()

    a&:hover, &.link:hover, &._link:hover
      color $color-link
      border-bottom-color transparent

  // item__content
  // ===============================================
  &__content
    flex 1 1
    display flex

// Loader
// ===============================================
.item__question
  opacity 0
  visibility hidden
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  display flex
  align-items stretch
  justify-content flex-start
  padding 0
  background $color-trn-hover
  border-radius 3px
  anim()

  &._visible
    opacity 1
    visibility visible

.item__loader
  opacity 0
  visibility hidden
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  display flex
  align-items center
  justify-content flex-start
  padding 0 15px
  background $color-trn
  border-radius 3px
  anim()

  &._visible
    opacity 1
    visibility visible

.loader
  z-index 3
  opacity 0
  visibility hidden
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  display flex
  justify-content center
  padding 100px 15px 0
  font-size 5rem
  background alpha($color-trn, .9)
  border 1px solid $color-line
  border-radius 3px
  anim()

  &._visible
    opacity 1
    visibility visible



// #is
.itemStat
  min-width 300px
  color $color-second
  border 2px solid transparent
  border-radius 3px
  anim()

  &._opened
    margin-bottom 15px
    background $color-trn-hover
    border-color $color-line

    &:last-child
      margin-bottom 0

  &._mb
    margin-bottom 20px

  &._mbs
    margin-bottom 5px

  &._link
    cursor pointer

  &:hover
    background $color-trn-hover
    border-color $color-rub

  &__in
    display flex
    align-items center
    padding 15px

  &__icon
    padding-right 15px
    .icon:hover
      background $color-link

  &__content
    display flex
    flex-flow column nowrap
    flex-grow 1
    cursor pointer

  &__graph
    flex-grow 1
    background #242424
    border-radius 3px

  &__graph__in
    height 4px
    border-radius 3px

    &._expense
      background $color-expense

    &._income
      background $color-income

  &__name
    flex-grow 1
    padding-left 5px
    text-transform capitalize
    font-size 1.1rem

  &__text
    display flex
    padding-bottom 10px

  &__price
    min-width 115px
    max-width 125px
    padding-right 5px
    text-align right

  &__trns
    cursor default
    padding 0 15px 0
