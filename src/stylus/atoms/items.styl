.items
  max-width 570px
  margin-bottom 60px

  &:last-child
    margin-bottom 0


// Item
// ===============================================
.trnItem
  position relative
  border-bottom 1px solid alpha($color-line, .5)
  anim()

  &:hover
    background alpha($color-main, .05)

  &:last-child
    border-bottom none

.item
  position relative
  color $color-second
  border-radius 3px
  anim()

  &._selected
    border-top-color $color-body
    background alpha(white, .04) !important

  // item__edit
  // ===============================================
  &__edit
    background $color-body

  // item__el
  // ===============================================
  &__el
    display flex
    align-items center
    padding 15px 0
    flex-shrink 0
    color $color-second

    &:first-child
      margin-left 15px

    &._account
      width 130px
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

    &._action
      justify-content center
      width 46px
      margin-left 15px
      opacity .2
      cursor pointer
      padding 15px 0
      font-size 1.5rem
      anim()

      &:hover
        opacity 1
        color $color-main

    &._category
      flex 1 1
      overflow hidden

    &._date
      margin-left 0
      text-align left

    &._delete
      padding-right 10px
      text-align right

    &._grow
      flex-grow 1

    &._name
      width 200px

    &._nopadding
      padding 10px 0

    &._pad
      padding-right 16px

    &._icon
      padding-right 16px
      width 66px

    &._price
      display flex
      flex-flow row wrap
      justify-content flex-end
      width 145px
      padding-right 30px
      text-align right

      &:last-child
        padding-right 0

      div
        flex 1 1 100%

    &._second
      color $color-second
      font-size .9rem

    &._static
      display block
      position relative

    &._question
      display flex
      justify-content flex-end
      flex-grow 1
      margin 0
      padding 18px 0
      font-size 1.2rem
      color $color-expense

    &._yes
      cursor pointer
      padding-right 15px
      font-size 1.5rem
      &:hover
        color $color-link

    &._no
      cursor pointer
      font-size 1.5rem
      &:hover
        color $color-link

    &.link, &._link
      cursor pointer
      padding-right 0
      font-size 1.5rem
      opacity 0
      anim()

    a&:hover, &.link:hover, &._link:hover
      color $color-link
      border-bottom-color transparent

  // item__content
  // ===============================================
  &__content
    flex 1 1
    display flex

// Loader
// ===============================================
.item__question
  z-index 2
  opacity 0
  visibility hidden
  position absolute
  display flex
  align-items flex-start
  justify-content flex-start
  left 0
  top 1px
  width 100%
  height calc(100% - 1px)
  padding 0 15px
  background $color-trn-hover
  border-radius 3px
  anim()

  &._visible
    opacity 1
    visibility visible

  &__in
    display flex
    align-items center
    flex-grow 1
    height 67px
    padding 0 10px
