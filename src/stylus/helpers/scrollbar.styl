scrollbar()
  &::-webkit-scrollbar
    width 6px
    height 16px

  &::-webkit-scrollbar-track
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
    border-radius 10px
    background $color-body

  &::-webkit-scrollbar-thumb
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.5)
    border-radius 10px
    background $color-main
