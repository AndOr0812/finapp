$theme = "black"
//$theme = "white"


// Black Theme
// ===============================================
if $theme == "black"
  $color-main = #ababab
  $color-white = alpha(white, .7)
  $color-second = #5f5f5f
  $color-link = #bb5c2c

  $color-rub = #2E86C1
  $color-tinkoff = #ab68da
  $color-sum = #7d7d7d
  $color-income = #1e7a45
  $color-graph = #242424
  $color-expense = #922B21
  $color-itemStat = alpha(black, .2)
  $color-icon = #242424

  // Items
  $color-itemStat-active = #161616

  // layout
  $color-body = #1A1A1A
  $color-layout = #161616
  $color-sidebar = #080808
  $color-panel = #161616
  $color-trn = #161616
  $color-trn-hover = #111111
  $color-trn-hover-line = #333333
  $color-line = #242424
  $color-line-layout = #2C2C2C
  $color-line-account = #272727
  $color-line-summary = #272727

  $color-header = $color-main
  $color-header-shaddow = black

  $color-14 = #6c26b0
  $color-43 = #E67E22


// White Theme
// ==============================================
if $theme == "white"
  $color-main = #666666
  $color-white = #666666
  $color-second = #7d7d7d
  $color-link = #bb5c2c

  $color-rub = #2E86C1
  $color-tinkoff = #ab68da
  $color-sum = #565656
  $color-income = #36c942
  $color-graph = #afafaf
  $color-expense = #df7157
  $color-itemstat = #fff
  $color-icon = #afafaf

  // Items
  $color-itemStat-active = #f3f3f3

  $color-body = #ffffff
  $color-layout = #ffffff
  $color-sidebar = #f3f3f3
  $color-panel = #fff
  $color-trn = #e2e6ea
  $color-trn-hover = #e2e6ea
  $color-trn-hover-line = #333333
  $color-line = #e6e6e6
  $color-line-layout = #ededed
  $color-line-account = #c7c7c7
  $color-line-summary = #e7e7e7

  $color-header = $color-main
  $color-header-shaddow = alpha(black, .1)
  $color-header-shaddow = none

  $color-14 = #6c26b0
  $color-43 = #E67E22


// Fonts
// ==============================================
$font-primary()
  font-family 'Robotto', sans-serif
$font-secondary()
  font-family 'Robotto', sans-serif
$font-numbers()
  font-family 'Unica One', 'Roboto', sans-serif


// Media
// ==============================================
$tablet = "(min-width: 768px)"
$laptop = "(min-width: 760px)"
$pc = "(min-width: 1200px)"

$laptopNew = "(min-width: 1200px)"
$pcNew = "(min-width: 1900px)"


// Animation
// ==============================================
$transition-time = .3s
$transition-style = cubic-bezier(0.17, 0.04, 0.03, 1)
