$max-width()
  max-width 1050px

// $theme = "dark"
// $theme = "light"
// $theme = "youtube"

// Dark Theme
// ===============================================
$color-main = #7f7f7f
$color-white = alpha(white, .7)
$color-white-text = alpha(white, .7)
$color-second = #5f5f5f
$color-link = #2E86C1
$color-sum = #969696
$color-income = #1e7a45
$color-expense = hsla(-3, 70%, 40%, 1)

$color-graph = #242424

// icons
$color-icon-bg = #242424
$color-icon-bg-active = #dadada
$color-icon-text = alpha(white, .7)
$color-icon-text-active = #080808

// layout
$color-body = #1A1A1A
$color-layout = #161616
$color-sidebar = #080808
$color-header-bg = #0e0e0e
$color-side-toogle = alpha(white, .1)

// items
$color-itemStat = alpha(black, .2)
$color-itemStat-active = #161616
$color-itemStat-border = alpha(black, .3)

// categories
$color-itemList-bg = $color-layout
$color-itemList-border = alpha(white, .05)

$color-trn = #161616
$color-trn-hover = #111111
$color-trn-hover-line = #333333
$color-line = #242424
$color-line-layout = #2C2C2C
$color-line-account = #272727
$color-line-summary = #232323


if $theme == "youtube"
  $color-body = #232323
  $color-layout = #111111
  $color-sidebar = #1c1c1c
  $color-header-bg = #111111

  $color-main = #e3e3e3
  $color-white = #e3e3e3
  $color-second = #888888


  $color-line = #888888

// Light Theme
// ==============================================
if $theme == "light"
  $color-main = #666666
  $color-white = #666666
  $color-second = #7d7d7d
  $color-link = #bb5c2c
  $color-sum = #565656
  $color-income = #229954
  $color-expense = #CB4335

  $color-graph = #afafaf
  $color-icon = #afafaf

  // layout
  $color-body = #ffffff
  $color-layout = #fbfbfb
  $color-sidebar = #F2F4F4
  $color-side-toogle = alpha(black, .1)

  // items
  $color-itemStat = #fbfbfb
  $color-itemStat-active = #eaeaea
  $color-itemStat-border = alpha(black, .05)

  // categories
  $color-itemList-bg = $color-layout
  $color-itemList-border = alpha(black, .1)

  $color-trn = #e2e6ea
  $color-trn-hover = #e2e6ea
  $color-trn-hover-line = alpha(black, .1)
  $color-line = #e6e6e6
  $color-line-layout = #ededed
  $color-line-account = #c7c7c7
  $color-line-summary = #e7e7e7

  $color-header = $color-main


// Fonts
// ==============================================
$font-primary()
  font-family 'Open Sans', sans-serif
$font-secondary()
  font-family 'Roboto', sans-serif
$font-numbers()
  font-family 'Unica One', 'Roboto', sans-serif


// Media
// ==============================================
$tablet = "(min-width: 768px)"
$laptop = "(min-width: 760px)"
$pc = "(min-width: 1200px)"

$laptopNew = "(min-width: 1200px)"
$pcNew = "(min-width: 1900px)"


// Animation
// ==============================================
$transition-time = .3s
$transition-style = cubic-bezier(0.17, 0.04, 0.03, 1)
